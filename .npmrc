# saved dependencies will be configured with an exact version
#       rather than using npmâ€™s default semver range operator
save-exact=true

# disable package-lock.json
# uncomment this if you do not wanna lockfile
#       lockfile cannot resolve conflict with typescript dependencies like { "@types/package-name": "*" }
# package-lock=false

# https://github.com/nodejs/help/issues/1783#issuecomment-545884471
# node-options="--max-old-space-size=4096"

# PNpm config
# https://pnpm.io/npmrc
save-prefix=""
save-workspace-protocol=rolling
prefer-workspace-packages=true
resolve-peers-from-workspace-root=true
auto-install-peers=true
