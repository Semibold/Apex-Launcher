{
  "compileOnSave": false,
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "outDir": ".ts-build",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node"
  }
}
