{
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "add": {
      "exact": true
    },
    "create": {
      "homepage": "https://github.com/Semibold/Apex-Launcher",
      "license": "UNLICENSED"
    },
    "version": {
      "exact": true,
      "allowBranch": "master",
      "message": "chore(release): publish"
    }
  },
  "npmClient": "npm",
  "npmClientArgs": [
    "--no-package-lock"
  ],
  "ignoreChanges": [
    "**/*.md"
  ],
  "version": "independent"
}
